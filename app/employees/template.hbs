<div>
	<div class="col-md-6">
		<h3>Employee Maintenance</h3>
	<div>
		<div>
			<strong class="col-md-4">Name: </strong>{{input value=name}}
			<button {{action 'add'}}>Add</button>
		</div>

		<p style="margin-top: 4px">
		<strong class="col-md-4">Type:</strong>
		{{#x-select value=employeeType on-change=(route-action 'setEmployeeType') as |xs|}}			
			{{#each model.employeetypes as |employeetypeOption|}}
			  {{#xs.option value=employeetypeOption}} {{employeetypeOption.name}} {{/xs.option}}
			{{/each}}
			{{#xs.option value=null}}{{/xs.option}}
		{{/x-select}}
		</p>

	</div>
	<p>
		<h4>Current employee list: 
			<button type="button" class="btn btn-default">
  				<span aria-hidden="true">Sort</span>
			</button>
		</h4>
		<ul>		
		{{#each model.sortedEmployeeTypes as |employeeType|}}		
			<li>
			{{employeeType.name}}
			<ul>
				{{#each employeeType.employees as |employee|}}		
					<li>{{employee.name}}</li>
				{{/each}}
			</ul>
			</li>
		{{/each}}
		</ul>
	</p>
	</div>
</div>